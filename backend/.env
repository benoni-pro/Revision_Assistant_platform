FRONTEND_URLS=http://localhost:3000,http://localhost:3001,http://localhost:3002
# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/revision_assistant
MONGODB_URI_TEST=mongodb://localhost:27017/revision_assistant_test

# JWT Configuration
JWT_SECRET=revision-assistant-jwt-secret-key-2024
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=revision-assistant-refresh-secret-2024
JWT_REFRESH_EXPIRE=30d

# Email Configuration (for notifications and password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@revisionassistant.com

# File Upload Configuration
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# AI Configurationgn
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORG_ID=your-openai-org-id

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Session Configuration
SESSION_SECRET=your-session-secret-here

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d
